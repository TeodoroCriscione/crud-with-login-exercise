{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Product Index</h1>

    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.imageFile }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-secondary">Show</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<div class="d-flex justify-content-start gap-3 mt-4">
        <a href="{{ path('app_product_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Product
        </a>
        <a href="{{ path('app_supplier_new') }}" class="btn btn-success">
            <i class="bi bi-person-plus-fill"></i> Add New Supplier
        </a>



    {#<a href="{{ path('app_product_new') }}" class="btn btn-primary my-5">Create new</a>
    <a href="{{ path('app_supplier_new') }}" class="btn btn-primary my-5 mx-5"> Add New Supplier</a>#}
</div>
{% endblock %}
