{% extends 'base.html.twig' %}

{% block title %}Product Index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Product Index</h1>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>${{ product.price }}</td>
                <td>{{ product.description|length > 40 ? product.description[:40] ~ '...' : product.description }}</td>
                <td>
                    {% if product.imageFile %}
                        <img src="{{ asset('uploads/images/' ~ product.imageFile) }}" alt="Product Image" class="img-thumbnail" style="width: 80px;">
                    {% else %}
                        <span class="text-muted">No image</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-eye"></i> Show
                    </a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center text-muted">No products found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

